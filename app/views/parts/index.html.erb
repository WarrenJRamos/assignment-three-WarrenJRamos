<%= form_tag(search_parts_url, method: "get") do %>
  <%= label_tag(:query, "Search for:") %>
  <%= text_field_tag :query, params[:query], data: { autocomplete: autocomplete_part_name_parts_path } %>
  <%= submit_tag("Search") %>
<% end %>

<h1>Parts</h1>

<table>
  <thead>
    <tr>
      <th>Part name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.part_name %></td>
        <td><%= link_to 'Show', part %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

