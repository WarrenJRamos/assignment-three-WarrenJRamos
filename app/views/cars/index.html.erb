<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Make title</th>
      <th>Model title</th>
      <th>Vin number</th>
      <th>Make</th>
      <th>Parts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make_title %></td>
        <td><%= car.model_title %></td>
        <td><%= car.vin_number %></td>
        <td><%= car.make.name %></td>
        <td><% car.parts.each do |part| %>
          <li><%= part.part_name %></li>
        <% end %></td>
        <!--<td><%= car.parts.to_ary %></td> -->
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

